class node:
    def __init__(self,x):
        self.next = None
        self.val = x
        
# 1234
#  2-->2
#  1--->None
# 3-->3
def reverse1(node):
    if node is None or node.next is None:
        return node
    node.next.next = node
    node.next= None
    newend = reverse1(node.next)
    return newend     
node1 = node(1)
node2 = node(2)
node3 = node(3)
node4 = node(4)
node5 = node(5)
node1.next = node2
node2.next = node3
node3.next= node4
node4.next = node5
reverse1(node1)

print node1.next.val
print node2.next.val
print node3.next.val
print node4.next.val
