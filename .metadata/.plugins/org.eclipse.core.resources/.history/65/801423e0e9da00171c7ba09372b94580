res= []
def pre_order(node):
    global res
    if node is None:
        return
    else:
        res.append(node.value)
        pre_order(node.left)
        pre_order(node.right)
    return res

print pre_order(N1)
    
def length(node):
    if node is None:
        return 0
    a= max(length(node.left),length(node.right))
    return a+1

def bbt(node):
    if node is None:
        return 0
    a = bbt(node.left)
    b = bbt(node.right)
    if a==-1 or b==-1:
        return -1
    if abs(a-b)>1:
        return -1
    return 1+max(a,b)
