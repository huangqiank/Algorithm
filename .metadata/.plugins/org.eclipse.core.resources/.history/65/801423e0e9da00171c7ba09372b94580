def print_k1_k2(node,k1,k2):
    if node is None:
        return 
    if node.value > k1 and node.value< k2:
        print node.value
        print_k1_k2(node.right,k1,k2)
        print_k1_k2(node.left,k1,k2)
    if node.value < k1:
        print_k1_k2(node.right,k1,k2)
    if node.value > k2:
        print_k1_k2(node.left,k1,k2)
