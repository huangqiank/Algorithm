node6 = Treenode(0)
node1.left = node2
node1.right = node3
node2.left = node4
node4.right = node5
print bbt(node1)


def bst(node):
    min = -2*float("inf")
    max = 2*float("inf")
    return help(node,min,max)
def help(node,min,max):
    if node is None:
        return True
    if node.value > min and node.value <max:
        return help(node.left,min,node.value) and help(node.right,node.value,max)
    else:
        return False

